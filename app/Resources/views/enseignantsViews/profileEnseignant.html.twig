		<li><b>adresse :</b>{{enseignant.adresse}}</li>
		<li><b>code postal :</b>{{enseignant.codePostal}}</li>
		<li><b>telephone :</b>{{enseignant.telephone}}</li>
		<li><b>username :</b>{{enseignant.username}}</li>
		<li><b>email :</b>{{enseignant.email}}</li>
		<li><b>type :</b>{{enseignant.typeUser|upper}}</li>
		<li><b>derniere connexion :</b>{{enseignant.lastLogin|date('Y-m-d')}}</li>

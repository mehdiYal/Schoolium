{% block body %}
<h1>Profile De {{enseignant.nom}} {{enseignant.prenom}}</h1>
	<ul>
		<li><b>photo :</b><img src="{% if enseignant.photo %}{{ asset('uploads/photos/' ~ enseignant.photo) }}{% else %}{{ asset('uploads/photos/avatar.png') }}{% endif %}" alt=""></li>
		<li><b>nom :</b>{{enseignant.nom}}</li>
		<li><b>prenom :</b>{{enseignant.prenom}}</li>

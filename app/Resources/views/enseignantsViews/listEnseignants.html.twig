{% extends 'base.html.twig' %}

{% block body %}
<h1>{{'list'|trans}} {{'teachers'|trans}}</h1>
	<ol>
		{% for enseignant in app.user.ecole.enseignants %}
			<li>{{ enseignant.nom}} {{ enseignant.prenom}} <a href="{{ path('editEnseignant',{'id':enseignant.id})}}">{{'edit'|trans}}</a> <a href="{{ path('removeEnseignant',{'id':enseignant.id})}}">{{'delete'|trans}}</a> <a href="{{ path('profileEnseignant',{'id':enseignant.id})}}">{{'profile'|trans}}</a></li>
		{% endfor %}
	</ol>
	
{% endblock %}
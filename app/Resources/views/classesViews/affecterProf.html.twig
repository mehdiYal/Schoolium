{% extends 'base.html.twig' %}

{% block body %}
<h1>{{classe.nom|trans}} {{classe.annee.nom}} {{classe.annee.niveau}} </h1>
	<ol>
		{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.matiere) }}
			    {{ form_widget(form.matiere ,{ 'attr': {'class': 'form-control'} }) }}
			    {{ form_errors(form.matiere) }}
			</div>
			<div class="form-group">
				{{ form_label(form.enseignant) }}
			    {{ form_widget(form.enseignant ,{ 'attr': {'class': 'form-control'} }) }}
			    {{ form_errors(form.enseignant) }}
			</div>
			<button type="submit">Valider</button>
		{{ form_end(form) }}
	</ol>
	
{% endblock %}
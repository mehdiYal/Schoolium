{% block body %}
<h1>Mon Profile {{app.user.nom}} {{app.user.prenom}}</h1>
	<ul>
		<li><b>photo :</b><img src="{% if app.user.photo %}{{ asset('uploads/photos/' ~ app.user.photo) }}{% else %}{{ asset('uploads/photos/avatar.png') }}{% endif %}" alt=""></li>
		<li><b>nom :</b>{{app.user.nom}}</li>
